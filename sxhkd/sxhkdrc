#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -show drun &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Show all workspaces
super + a
    rofi -show window

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + f
    bspc query -T -n | grep -q '"state":"fullscreen"' && bspc node -t tiled || bspc node -t fullscreen
	
super + s
    bspc query -T -n | grep -q '"state":"floating"' && bspc node -t tiled || bspc node -t floating

# set the node flags
super + shift + {l,s}
	bspc node -g {locked,sticky}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the next/previous windows
super + ctrl + {Left,Right}
    bspc node -f {prev,next}.!hidden.window

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# Apps 
# 

# Lock the screan
super + shift + b
    bash ~/.config/bspwm/scripts/lock.sh

# Open Vscode
super + c
    code &

# Open Thunar
super + t
    thunar &

# Open alarm-clock-applet 
super + w
    alarm-clock-applet &

# Show clipboard history
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Open Browser
super + b
    google-chrome-stable &

# Open Pavucontrol
super + p
    pavucontrol &

# --- Volume control ---
# Increase volume
XF86AudioRaiseVolume
    pamixer -i 5

# Decrease volume
XF86AudioLowerVolume
    pamixer -d 5

# Mute/unmute the sound
XF86AudioMute
    pamixer -t

# Mute/unmute the microphone
XF86AudioMicMute
    pamixer --default-source -t

# Play/Stop
XF86AudioPlay
    playerctl play-pause

# Next track
XF86AudioNext
    playerctl next

# Last track
XF86AudioPrev
    playerctl previous

# --- Brightness Control ---

# Increase brightness
XF86MonBrightnessUp
    ~/.config/bspwm/scripts/change_brightness.sh up

super + alt + Up
    ~/.config/bspwm/scripts/change_brightness.sh up

# Decrease brightness
XF86MonBrightnessDown
    ~/.config/bspwm/scripts/change_brightness.sh down

super + alt + Down
    ~/.config/bspwm/scripts/change_brightness.sh down

# Night mode
super + ctrl + Down
    monitor=`bspc query -M -m focused --names`; \
    xrandr --output $monitor --brightness .7 --gamma 1:0.93853986:0.88130458

# Normal mode
super + ctrl + Up
    monitor=`bspc query -M -m focused --names`; \
    xrandr --output $monitor --brightness 1 --gamma 1



# --- Screenshot ---

# Capture a selected area (interactive mode)
Print
    flameshot gui &

# Capture the entire screen and save it to the Pictures folder
shift + Print
    flameshot full -p ~/Imagens/Screenshots/ &