# Terminal emulator
super + Return
	wezterm

# Program launcher
super + @space
	rofi -show drun &

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Show all windows
super + a
    rofi -show window

# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }q
	bspc node -{c,k}

# Alternate tiled and monocle
super + m
	bspc desktop -l next

# Set the window fullscreen
super + f
    bspc query -T -n | grep -q '"state":"fullscreen"' && bspc node -t tiled || bspc node -t fullscreen

# Set the window floating
super + s
    bspc query -T -n | grep -q '"state":"floating"' && bspc node -t tiled || bspc node -t floating

# set the node flags
super + shift + {l,s}
	bspc node -g {locked,sticky}

# Focus/Swap the node given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Next/Previous workspace
super + {_, shift + }Tab
	bspc desktop -f {next, prev}

# Focus to the given desktop
super + {1-9,0}
    bspc desktop -f '^'{1-9,10}

# Send to the given desktop
super + shift + {1-9,0}
    bspc node -d '^'{1-9,10} --follow

# Lock the screen
super + l
    bash ~/.config/bspwm/scripts/lock.sh

# Open Neovim inside WezTerm
super + c
    wezterm start -- nvim

# Open Thunar
super + t
    thunar &

# Open Evince
super + e
    evince &

# Open alarm-clock-applet 
super + w
    alarm-clock-applet &

# Show clipboard history
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Open Browser
super + b
    google-chrome-stable &

# Open Pavucontrol
super + p
    pavucontrol &

# Open network manager
super + n
    wezterm -e nmtui

# Increase volume
XF86AudioRaiseVolume
    pamixer -i 5

# Decrease volume
XF86AudioLowerVolume
    pamixer -d 5

# Mute/unmute the sound
XF86AudioMute
    pamixer -t

# Mute/unmute the microphone
XF86AudioMicMute
    pamixer --default-source -t

# Play/Stop
XF86AudioPlay
    playerctl play-pause

# Next track
XF86AudioNext
    playerctl next

# Last track
XF86AudioPrev
    playerctl previous

# Increase brightness
XF86MonBrightnessUp
    xsct -d 0 0.1

# Increase brightness
super + alt + Right
    xsct -d 0 0.1

# Decrease brightness
XF86MonBrightnessDown
    xsct -d 0 -0.1

# Decrease brightness
super + alt + Left
    xsct -d 0 -0.1

# Day temperature
super + alt + Up
    xsct 6500

# Night temperature
super + alt + Down
    xsct 3500

# Printscreen 
super + Print
    flameshot gui &

# Help
super + h
    ~/.config/rofi/scripts/sxhkd_helper.sh | rofi -dmenu -i -p "Keybindings" -l 1g0 -markup-rows -sep '\0'
