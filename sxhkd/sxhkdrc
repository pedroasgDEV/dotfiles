# Terminal emulator
super + Return
	alacritty

# Program launcher
super + @space
	rofi -show drun &

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Show all windows
super + a
    rofi -show window

# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }q
	bspc node -{c,k}

# Alternate tiled and monocle
super + m
	bspc desktop -l next

# Set the window fullscreen
super + f
    bspc query -T -n | grep -q '"state":"fullscreen"' && bspc node -t tiled || bspc node -t fullscreen

# Set the window floating
super + s
    bspc query -T -n | grep -q '"state":"floating"' && bspc node -t tiled || bspc node -t floating

# set the node flags
super + shift + {l,s}
	bspc node -g {locked,sticky}

# Focus/Swap the node given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Next/Previous desktop
super + alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# Next/Previous windows
super + ctrl + {Left,Right}
    bspc node -f {prev,next}.!hidden.window

# Focus/Send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Lock the screan
super + l
    bash ~/.config/bspwm/scripts/lock.sh

# Open Vscode
super + c
    code &

# Open Thunar
super + t
    thunar &

# Open alarm-clock-applet 
super + w
    alarm-clock-applet &

# Show clipboard history
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Open Browser
super + b
    google-chrome-stable &

# Open Pavucontrol
super + p
    pavucontrol &

# Increase volume
XF86AudioRaiseVolume
    pamixer -i 5

# Decrease volume
XF86AudioLowerVolume
    pamixer -d 5

# Mute/unmute the sound
XF86AudioMute
    pamixer -t

# Mute/unmute the microphone
XF86AudioMicMute
    pamixer --default-source -t

# Play/Stop
XF86AudioPlay
    playerctl play-pause

# Next track
XF86AudioNext
    playerctl next

# Last track
XF86AudioPrev
    playerctl previous

# Increase brightness
XF86MonBrightnessUp
    ~/.config/bspwm/scripts/change_brightness.sh up

# Increase brightness
super + alt + Up
    ~/.config/bspwm/scripts/change_brightness.sh up

# Decrease brightness
XF86MonBrightnessDown
    ~/.config/bspwm/scripts/change_brightness.sh down

# Decrease brightness
super + alt + Down
    ~/.config/bspwm/scripts/change_brightness.sh down

# Night mode
super + ctrl + Down
    monitor=`bspc query -M -m focused --names`; \
    xrandr --output $monitor --brightness .7 --gamma 1:0.93853986:0.88130458

# Day mode
super + ctrl + Up
    monitor=`bspc query -M -m focused --names`; \
    xrandr --output $monitor --brightness 1 --gamma 1

# Printscreen 
super + Print
    flameshot gui &

# Help
super + h
    ~/.config/rofi/scripts/sxhkd_helper.sh | rofi -dmenu -i -p "Keybindings" -l 1g0 -markup-rows -sep '\0'